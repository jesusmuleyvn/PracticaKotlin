<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.instalacionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">


        <ImageView
            android:id="@+id/imagenPlanGestiones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/plan_gestiones_round"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/tvDatosInstalacion"
            style="@style/estilotvDatosInstalacion"
            android:layout_width="300dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/smart_solar_energia"/>

    </LinearLayout>


</FrameLayout>